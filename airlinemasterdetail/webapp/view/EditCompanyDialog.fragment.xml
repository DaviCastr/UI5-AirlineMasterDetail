<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        id="editCompanyDialog"
        stretch="false"
        resizable="true"
        draggable="true"
        title="{= ${AirlineID} ? ${i18n>edit_company_title} : ${i18n>new_company_title} }"
        class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer"
    >
        <content>
            <f:SimpleForm
                id="formEdit"
                minWidth="1024"
                editable="false"
                layout="ResponsiveGridLayout"
                labelSpanL="3"
                labelSpanM="3"
                emptySpanL="4"
                emptySpanM="4"
                columnsL="1"
                columnsM="1"
            >
                <Label
                    id="_IDGenLabel1"
                    text="{i18n>airlineId}"
                />
                <Input
                    id="_IDGenInput"
                    value="{AirlineID}"
                    type="Text"
                    enabled="{= ${editCompanyModel>/isNew} }"
                />

                <Label
                    id="_IDGenLabel2"
                    text="{i18n>airlineName}"
                />
                <Input
                    id="_IDGenInput1"
                    type="Text"
                    value="{AirlineName}"
                />

                <Label
                    id="_IDGenLabel3"
                    text="{i18n>currencyCode}"
                />
                <Input
                    id="_IDGenInput2"
                    type="Text"
                    value="{CurrencyCode}"
                />

                <Label
                    id="_IDGenLabel4"
                    text="{i18n>url}"
                />
                <Input
                    id="_IDGenInput3"
                    type="Text"
                    value="{Url}"
                />
            </f:SimpleForm>
        </content>
        <buttons>
            <Button
                id="_IDGenButton"
                text="{i18n>btnSave}"
                type="Accept"
                press=".onSaveCompanyButtonPress"
            />
            <Button
                id="_IDGenButton1"
                text="{i18n>btnCancel}"
                press=".onCancelNewCompany"
            />
            <Button
                id="_IDGenButton2"
                text="{i18n>btnDelete}"
                press=".onBtnDeletePress"
                type="Reject"
                visible="{= !${editCompanyModel>/isNew} }"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
